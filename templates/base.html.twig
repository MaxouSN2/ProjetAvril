<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Site{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/"></a> {# Si besoin, mettre "Accueil" entre >< #}
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/accueil">Site Accueil</a>
                    </li>

                    <!-- Ajout de l'onglet "À propos" -->
                    <li class="nav-item">
                        <a class="nav-link" href="/a-propos">À propos</a>
                    </li>

                        <!-- Menu déroulant Cours -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="coursDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            Cours
                            </a>
                        <ul class="dropdown-menu" aria-labelledby="coursDropdown">
                            <li><a class="dropdown-item" href="/cours-php">Cours PHP</a></li>
                            <li><a class="dropdown-item" href="/cours-sql">Cours SQL</a></li>
                            <li><a class="dropdown-item" href="/cours-symfony">Cours Symfony</a></li>
                            
                        </ul>
                    </li>

                    <!-- Menu déroulant Quiz -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="quizDropdown" role="button"
                        data-bs-toggle="dropdown" aria-expanded="false">
                            Quiz
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="quizDropdown">
                            <li><a class="dropdown-item" href="/quiz-php">Quiz PHP</a></li>
                            <li><a class="dropdown-item" href="/quiz-sql">Quiz SQL</a></li>
                            <li><a class="dropdown-item" href="/quiz-symfony">Quiz Symfony</a></li>
                        </ul>
                    </li>

                     <!-- Ajout de l'onglet "Recap" -->
                    <li class="nav-item">
                        <a class="nav-link" href="/quiz-recap">Recapitulatif</a>
                    </li>
                </ul>

                <!-- Alignement des liens "Se connecter" et "S'inscrire" à droite -->
                <ul class="navbar-nav ms-auto">
                    {% if app.session.get('connect') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                        </li>
                        <li class="nav-item">
                            <span class="nav-link">Bienvenue, {{ app.session.get('email') }}</span>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                        </li>
                        
                    {% endif %}
                     <li class="nav-item">
                            <a class="nav-link" href="/faq">FAQ</a>
                     </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenu principal -->
    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
