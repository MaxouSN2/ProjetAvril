{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow" style="background-color: white; border-radius: 8px;">
                <div class="card-header text-center" style="border-top-left-radius: 8px; border-top-right-radius: 8px;">
                    <h2>Se connecter</h2>
                </div>
                <div class="card-body" style="padding: 2rem;">
                    {{ form_start(form) }}

                    <div class="mb-3">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>

                    <div class="mb-3">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.password) }}
                    </div>

                    <div class="d-grid">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success btn-block'}}) }}
                    </div>

                    <div class="mt-3 text-center">
                        <a href="{{ path('app_register') }}">Pas encore inscrit ? Cr√©ez un compte.</a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
